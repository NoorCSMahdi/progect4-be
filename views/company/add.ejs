    <label>Company Location</label>
    <input type="text" name="company_location" className="form-control" id="company-location-input"/>
  </div>

  <div>
    <label>Company Phone Number</label>
    <input type="number" name="company_phoneNumber" class="form-control"/>
  </div>
  <div>
    <label>Company Email Address</label>
    <input type="email" name="company_emailAddress" class="form-control"/>
  </div>
