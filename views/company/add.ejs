<h1> Add an Company </h1>

<form method="POST" action="/company/add">
  <div>
    <label>Company Name</label>
    <input type="text" name="company_name" class="form-control"/>
  </div>

  <div>
    <label>Company Description</label>
    <textarea name="company_description" class="form-control"></textarea>
  </div>

  <div>
    <label>Company Image</label>
    <input class="form-control" onchange="validateSize(this)" type="file" name="item_img" id="item_img" accept=".png, .jpg, .jpeg, .gif">
  </div>

